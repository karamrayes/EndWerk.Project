@model Order.Object.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shipped)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shipped)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentRecevied)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentRecevied)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Product Id</th>
                        <th>Product Price</th>
                        <th>Product Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetail)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => orderDetail.Product.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => orderDetail.Product.ProductId)</td>
                            <td>@Html.DisplayFor(modelItem => orderDetail.UnitPrice)</td>
                            <td>@Html.DisplayFor(modelItem => orderDetail.Quantity)</td>
                            @*<td>@Html.DisplayFor(modelItem => orderDetail.Product.ProductCategory.ProductCategoryName)</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </dd>       
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.OrderId  }) |
    @Html.ActionLink("GoToOrderDetails", "GetAllOrderDetailsById", "OrderDetails", new { id = Model.OrderId }, null)|
    <a asp-action="Index">Back to List</a>
   
</div>

